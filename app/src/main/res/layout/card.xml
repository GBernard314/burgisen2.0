<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bkBun"
        android:paddingBottom="3dp">

        <ImageView
            android:id="@+id/DishImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/french_fries" />

        <TextView
            android:id="@+id/DishTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/DishImage"
            android:layout_marginStart="9dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@id/DishImage"
            android:text="Line 1"
            android:textColor="@color/bkBunLight"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/DishTitle"
            android:layout_alignBottom="@+id/DishTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="217dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/DishTitle"
            android:text="price1" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>